@model List<Expense>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6"><h2 class="text-primary">Expense List</h2></div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create New Expense</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>  
                    <th>Category</th>
                    <th>Change</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ExpenseName</td>
                        <td width="30%">@item.Amount</td>
                        <td width="30%">@item.ExpenseCategory.Categoryname</td>
                        <td width="30%">
                            <div class="w-100 btn btn-group" role="group">
                                <a class="btn btn-primary mx-2" asp-route-id="@item.Id" asp-action="Update" asp-controller="Expense">Update</a>
                                <a class="btn btn-danger mx-2" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Expense">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                <tr>
                    <td width="=25%"><strong>Total Amoount</strong></td>
                    <td width="25%">
                        <strong>Rs @Model.Sum(x=>x.Amount)</strong>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-danger">No data available</h3>
    }
</div>