@model ExpenseCategories

<form method="post" asp-action="DeletePost">
    <input type="hidden" asp-for="id" />
    <div class="border p-3">
        <div class="mb-3 row">
            <h2 class="text-black-50 ps-3">Delete Expense Categories</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Categoryname"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-6">
                        <input asp-for="Categoryname" disabled class="form-control" />                    
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
