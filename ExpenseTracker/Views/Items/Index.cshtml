@model List<Items>

    <div class="container p-3">
        <div class="row p-4">
            <div class="col-6"><h2 class="text-primary">Borrowed Item List</h2></div>
            <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Items" asp-action="Create">Add New</a>
            </div>
        </div>
        @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Borrower</th>
                    <th>Item Name</th>
                    <th>Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Lender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-danger">No data available</h3>
    }
</div>